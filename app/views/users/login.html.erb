<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="pull-left">
        <%= link_to icon('chevron-left'), suggestions_path %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Login</h1>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_tag session_create_path do %>
          <div class="form-group">
            <%= text_field_tag :email, "", :class => 'form-control', :placeholder => 'Enter email' %>
          </div>
          <div class="form-group">
            <%= password_field_tag :password, "", :class => 'form-control', :placeholder => 'Enter password'  %>
          </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= submit_tag "Log in", :class => ['btn', 'btn-success'] %>
        </div>
      </div>
    </div>
  </div>
</div>
