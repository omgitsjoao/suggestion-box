<div class="container">
  <% if notice %>
  <div class="row">
    <div class="col-md-12">

      <div class="alert alert-success alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert"
        aria-label="Close">
        <span aria-hidden="true">Ã—</span>
      </button>
      <%= notice %>
    </div>
  </div>
</div>
<% end %>
<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">Suggestions</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-12 text-center">
    <%= link_to 'New Suggestion', new_suggestion_path %>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-12">
    <table>
      <thead>
        <tr>
          <th>Suggestion</th>
          <th>Name</th>
          <th>Contact</th>
          <th colspan="10"></th>
        </tr>
      </thead>

      <tbody>
        <% @suggestions.each do |suggestion| %>
        <tr>
          <td><%= link_to short_text(sanitize(suggestion.content)), suggestion %></td>
          <td><%= suggestion.name %></td>
          <td class="text-center"><%= mail_to suggestion.email, icon('envelope-o') %></td>
          <td>
            <%= link_to icon('pencil'), edit_suggestion_path(suggestion), :class => 'tb-link'%>
          </td>
          <td>
            <%= link_to icon('trash-o'), suggestion, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'tb-link' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
</div>
