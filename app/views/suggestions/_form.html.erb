<%= form_for(@suggestion) do |f| %>
<% if @suggestion.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@suggestion.errors.count, "error") %> prohibited this suggestion from being saved:</h2>

  <ul>
    <% @suggestion.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<% if current_user %>
<div class="row">
  <div class="col-md-12">
    <div class="switcher pull-right">
      <label class="checkbox" for="suggestion_approved">
        <%= f.check_box :approved,  :class => 'custom-checkbox', :data => {:toggle => 'checkbox'} %>
          <span class="icons">
            <span class="icon-unchecked"></span>
            <span class="icon-checked"></span>
          </span>
        Approve ?
        </label>

    </div>
  </div>
</div>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.text_area :content,  :class => 'form-control',
      :placeholder => 'Wirte your suggestion here', :rows => '7', :required => 'required'%>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control', :placeholder => 'Please tell us thy name',
      :required => 'required' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.text_field :email, :class => 'form-control', :placeholder => 'For contact proposes, add your email',
      :required => 'required'   %>
    </div>
  </div>
</div>
<div class="actions">
  <%= f.submit 'Send', :class => ['btn', 'btn-success'] %>
</div>
<% end %>
